{
  "name": "@lumirelle/build-with-bun",
  "type": "module",
  "version": "0.0.1",
  "description": "A utils for building JS/TS projects with bun",
  "author": "Lumirelle <shabbyacc@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lumirelle",
  "homepage": "https://github.com/lumirelle/build-with-bun#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumirelle/build-with-bun.git"
  },
  "bugs": "https://github.com/lumirelle/build-with-bun/issues",
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "bun simple-git-hooks",
    "dev": "bun ./scripts/dev.ts",
    "build": "bun ./scripts/build.ts",
    "start": "bun run dev",
    "lint": "bun eslint .",
    "typecheck": "bun tsc --noEmit",
    "usagecheck": "bun knip",
    "distcheck": "bun attw --pack --profile esm-only && bun publint",
    "check": "bun run lint && bun run typecheck && bun run usagecheck && bun run distcheck",
    "test": "bun test",
    "prerelease": "bun run build && bun run check && bun run test",
    "release": "bun bumpp"
  },
  "workspaces": {
    "packages": ["."],
    "catalogs": {
      "dev": {
        "bumpp": "^10.4.0",
        "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657",
        "typescript": "^5.9.3"
      },
      "inlined": {
        "@antfu/utils": "^9.3.0",
        "oxc-transform": "^0.108.0"
      },
      "check": {
        "@antfu/eslint-config": "^7.0.1",
        "@arethetypeswrong/cli": "^0.18.2",
        "eslint": "^9.39.2",
        "eslint-plugin-format": "^1.3.1",
        "knip": "^5.81.0",
        "lint-staged": "^16.2.7",
        "publint": "^0.3.16"
      },
      "test": {
        "vitest-package-exports": "^1.1.2"
      },
      "types": {
        "@types/bun": "^1.3.6",
        "@types/node": "^25.0.9"
      }
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:check",
    "@antfu/utils": "catalog:inlined",
    "@arethetypeswrong/cli": "catalog:check",
    "@types/bun": "catalog:types",
    "@types/node": "catalog:types",
    "bumpp": "catalog:dev",
    "eslint": "catalog:check",
    "eslint-plugin-format": "catalog:check",
    "knip": "catalog:check",
    "lint-staged": "catalog:check",
    "oxc-transform": "catalog:inlined",
    "publint": "catalog:check",
    "simple-git-hooks": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest-package-exports": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*": "bun eslint --fix"
  }
}
